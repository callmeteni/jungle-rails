<!-- app/views/sessions/new.html.erb -->
<h1>Login</h1>

<%= form_tag login_path do %>
  <div class="field">
    <%= label_tag :email %><br>
    <%= email_field_tag :email, nil, required: true %>
  </div>

  <div class="field">
    <%= label_tag :password %><br>
    <%= password_field_tag :password, nil, required: true %>
  </div>

  <div class="actions">
    <%= submit_tag 'Login' %>
  </div>
<% end %>

<%= link_to 'Register', new_user_path %>
